[flake8]
exclude = 
    draft_scripts/*
    draft_scripts/*.py
    venv/*
max-line-length = 127
max-complexity = 10
per-file-ignores =
    tests/*: F401, F841  # ignore unused imports and variables in test files
    utils.py: F401  # ignore unused imports in utils.py
    main.py: C901  # ignore complexity in main.py
    models.py: C901, F401  # ignore complexity and unused imports in models.py
    providers/*: C901  # ignore complexity in providers
